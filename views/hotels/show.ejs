<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Hotel Manager</title>

  <!-- Materialize CSS -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="/libraries/materialize/css/materialize.min.css" />

  <!-- Application Styles -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- jQuery -->
  <script src="/libraries/jquery/jquery.min.js"></script>

  <!-- Materialize JS -->
  <script src="/libraries/materialize/js/materialize.min.js"></script>

  <!-- Application JS -->
  <script src="/js/app.js"></script>
</head>
<body>

  <nav>
    <div class="nav-wrapper">
      <a href="/hotels" class="brand-logo">Hotel Property Manager</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/hotels/new">Add Hotel +</a></li>
      </ul>
    </div>
  </nav>
  <form action="/hotels" method="put">
    <div class="container margin-top-20">
      <div class="row">
        <div class="col s12">
          <div class="card horizontal">
            <div class="card-image">
              <img src="img/hotel_sample.jpg">

              <button class="btn-floating btn-large waves-effect waves-light red margin-top-20" style="margin-left:10px;"><i class="material-icons">delete</i></button>
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <div class="input-field">
                  <input name="hotel_name" type="text" placeholder="Hotel Name" />
                </div>

                <div class="input-field">
                  <textarea name="hotel_description"  placeholder="hotel_description" class="materialize-textarea"></textarea>
                </div>

                <div class="input-field">
                  <input name="hotel_address"  type="text" placeholder="Hotel Address" />
                </div>

                <div class="input-field">
                  <select name="star_rating" >
                    <option value="">Hotel Star Rating</option>
                    <option value="1">1 Star</option>
                    <option value="2">2 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="5">5 Stars</option>
                  </select>
                </div>

                <div class="input-field">
                  <select name="pet_friendly" >
                    <option value="">Pet Friendly?</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                  </select>
                </div>

                <div class="input-field">
                  <input name="hotel_image_url"  type="text" placeholder="Hotel Image URL" />
                </div>
              </div>
              <div class="card-action">
                <button class="waves-effect waves-light btn">Submit Changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>

</body>
</html>
